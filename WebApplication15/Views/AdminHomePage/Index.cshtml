@model List<WebApplication15.Data.User>

@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tablo Tasarımı</title>
    <style>
        body {
            text-align: center;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        h2 {
            margin-bottom: 20px;
        }

        table {
            width: 70%;
            border-collapse: collapse;
            margin-left:17%;

        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
<h1>Users</h1>

  <table>
<thead>
    <tr>
    <th>Id</th>
    <th>Name</th>
    <th>SurName</th>
    <th> </th>
    </tr >
</thead>
<tbody>
    @foreach(var AddUserViewModel in Model)
    {
       <tr>
                <td> @AddUserViewModel.Id</td>
                   <td> @AddUserViewModel.UserName</td>
                       <td> @AddUserViewModel.UserSurname</td>
                               <td> <a href="Login/View/@AddUserViewModel.Id">View</a> </td>
        </tr>
    }
</tbody>
  </table>
  </body>
</html>

