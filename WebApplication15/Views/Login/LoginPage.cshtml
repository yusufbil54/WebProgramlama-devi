@model WebApplication15.Models.LoginPageViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">



<body>

  <div class="wrapper">
  <form asp-action="LoginPage" asp-controller="Login" method="post">
  <h1>Login</h1>
  <div class="input-box">
    <input asp-for="UserName" type="text" placeholder="Username" required>
    <i class='bx bxs-user'></i>
  </div>
  <div class="input-box">
    <input asp-for="PassWord" type="password" placeholder="Password" required>
    <i class='bx bxs-lock-alt' ></i>
  </div>
 
            @if (!string.IsNullOrEmpty(ViewData["Error2"] as string))
            {
              <p class="error">@ViewData["Error2"]</p>
            }
  <button type="submit" class="btn">Login</button>
   <div class="register-link">
        <p><a asp-controller="Login" asp-action="Add"> Dont have an account?</a></p>
   </div>
     <div class="register-link">
        <p><a asp-controller="Home" asp-action="Index"> go to Home page</a></p>
   </div>
   <div class="register-link">
        <p><a asp-controller="Login" asp-action="AdminPage"> Are you admin ?</a></p>
   </div>
</form>
        
  </div>
 
</body>
</html>