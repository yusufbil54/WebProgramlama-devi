@model WebApplication15.Models.LoginPageViewModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Form | Dan Aleko</title>
  <link rel="stylesheet" href="~/css/Login.css">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
  <div class="wrapper">
  <form asp-action="LoginPage" asp-controller="Login" method="post">
  <h1>Login</h1>
  <div class="input-box">
    <input asp-for="UserName" type="text" placeholder="Username" required>
    <i class='bx bxs-user'></i>
  </div>
  <div class="input-box">
    <input asp-for="PassWord" type="password" placeholder="Password" required>
    <i class='bx bxs-lock-alt' ></i>
  </div>
  <div class="register-link">
        <p>Dont have an account?<a asp-controller="Login" asp-action="Add"> go to register page</a></p>
   </div>
   <div class="register-link">
        <p>Are you admin ?<a asp-controller="Login" asp-action="AdminPage"> Admin Sign in</a></p>
   </div>
            @if (!string.IsNullOrEmpty(ViewData["Error2"] as string))
            {
              <p class="error">@ViewData["Error2"]</p>
            }
  <button type="submit" class="btn">Login</button>
</form>
        
  </div>
    
</body>
</html>